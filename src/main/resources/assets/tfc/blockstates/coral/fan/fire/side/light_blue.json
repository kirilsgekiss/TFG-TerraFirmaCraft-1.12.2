{
  "multipart": [
    {
      "when": {
        "facing": "up"
      },
      "apply": [
        {
          "model": "tfc:coral/fan/fire/light_blue",
          "x": 180
        }
      ]
    },
    {
      "when": {
        "facing": "down"
      },
      "apply": [
        {
          "model": "tfc:coral/fan/fire/light_blue"
        }
      ]
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": [
        {
          "model": "tfc:coral/fan/fire/side/light_blue",
          "x": 270,
          "y": 90
        }
      ]
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": [
        {
          "model": "tfc:coral/fan/fire/side/light_blue",
          "x": 270,
          "y": 180
        }
      ]
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": [
        {
          "model": "tfc:coral/fan/fire/side/light_blue",
          "x": 270,
          "y": 270
        }
      ]
    },
    {
      "when": {
        "facing": "north"
      },
      "apply": [
        {
          "model": "tfc:coral/fan/fire/side/light_blue",
          "x": 270
        }
      ]
    }
  ]
}