      }
    },
    {
      "when": {
        "east": "true"
      },
      "apply": {
        "model": "tfc:coral/fan/fire/side/red",
        "y": 270
      }
    },
    {
      "when": {
        "north": "true"
      },
      "apply": {
        "model": "tfc:coral/fan/fire/side/red",
        "y": 180
      }
    },
    {
      "when": {
        "south": "true"
      },
      "apply": {
        "model": "tfc:coral/fan/fire/side/red"
      }
    },
    {
      "when": {
        "up": "true"
      },
      "apply": {
        "model": "tfc:coral/fan/fire/red",
        "x": 180
      }
    },
    {
      "when": {
        "west": "true"
      },
      "apply": {
        "model": "tfc:coral/fan/fire/side/red",
        "y": 90
      }
    }
